            <label for="movie-desc">Description:</label>
            <textarea class="form-input" id="movie-desc" name="movie-desc"></textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Add this movie on The Shelf</button>
          </div>
        </form>
      </div>

      <div class="col-md-5 card bg-light">

        {{#unless movies.length}}
        <div class="movie-list listed-movies mt-5">
          <h3>You're not lending any movies.</h3>
          <p>Be a Good Neighbor! <br>Use the form on the left, to share a movie with the neighborbood.</p>
        </div>
        {{/unless}}

        {{#if movies.length}}
        <div class="movie-list listed-movies mt-5">
          <h3>LENDING to The Shelf:</h3>

          {{#each movies as |movie|}}
          <div class="row mb-2">
            <div class="col-md-8">
              <h4><a href="/movie/{{movie.movie_id}}">{{movie.movie_name}}</a></h4>
            </div>
            <div class="col-md-4">
              <button id="remove-button" class="btn btn-sm btn-danger" data-id="{{movie.movie_id}}">REMOVE</button>
            </div>
          </div>
          {{/each}}
        </div>
        {{/if}}

        {{#unless borrowedMovies.length}}
        <div class="movie-list listed-movies mt-5">
          <h3>You're not borrowing any movies yet.</h3>
          <a href="/theshelf" type="button" class="btn btn-success btn-lg justify-self-center">See what's on The
            Shelf</a>
        </div>
        {{/unless}}

        {{#if borrowedMovies.length}}
        <div class="movie-list borrowed-movies mt-5">
          <h3>BORROWING from The Shelf:</h3>

          {{#each borrowedMovies as |borrowedMovie|}}
          <div class="row mb-2">
            <div class="col-md-8">
              <h4><a href="/movie/{{borrowedMovie.movie_id}}">{{borrowedMovie.movie_name}}</a></h4>
            </div>
            <div class="col-md-4">
              <button id="return-button" class="btn btn-sm btn-info"
                data-id="{{borrowedMovie.movie_id}}">RETURN</button>
            </div>
          </div>
          {{/each}}
        </div>
        {{/if}}
      </div>

    </div>
  </div>
</div>

<script src="./js/profile.js"></script>
